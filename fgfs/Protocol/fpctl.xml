<?xml version="1.0"?>
<!--

Protocol definition to output FCU indicator and display values.

Example usage:

<dash><dash>generic=serial,out,3,/dev/ttyUSB0,115200,fpctl

Fields:
    0: AP1 LED (bool)
    1: AP2 LED (bool)
    2: A/THR LED (bool)
    3: LOC LED (bool)
    4: APPR LED (bool)
    5: EXPED LED (bool)
    6: MASTER WARN (bool)
    7: MASTER CAUTION (bool)
    8: KTS/MACH mode (bool, 0=knots)
    9: HDG/TRK mode (bool, 0=HDG)
   10: VERT display (int, 1=VS, 5=FPA, else dashes)
   11: ALT (int)
   12: HDG (int)
   13: SPD KTS (int)
   14: SPD MACH (float)
   15: VS (string, e.g., "+60")
   16: FPA (float)

-->
<PropertyList>
  <generic>
    <output>
      <line_separator>\n</line_separator>
      <var_separator>|</var_separator>
      <chunk>
        <name>AP1</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-ap1</node>
      </chunk>
      <chunk>
        <name>AP2</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-ap2</node>
      </chunk>
      <chunk>
        <name>A/THR</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-athr</node>
      </chunk>
      <chunk>
        <name>LOC</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-loc</node>
      </chunk>
      <chunk>
        <name>APPR</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-appr</node>
      </chunk>
      <chunk>
        <name>EXPED</name>
        <format>%d</format>
        <node>/controls/indicators/fcu-exped</node>
      </chunk>
      <chunk>
        <name>MASTER WARN</name>
        <format>%d</format>
        <node>/ECAM/warnings/master-warning-light</node>
      </chunk>
      <chunk>
        <name>MASTER CAUTION</name>
        <format>%d</format>
        <node>/ECAM/warnings/master-caution-light</node>
      </chunk>
      <chunk>
        <name>KTS/MACH mode</name>
        <format>%d</format>
        <node>/it-autoflight/input/kts-mach</node>
      </chunk>
      <chunk>
        <name>HDG/TRK mode</name>
        <format>%d</format>
        <node>/it-autoflight/input/trk</node>
      </chunk>
      <chunk>
        <name>VERT mode</name>
        <format>%d</format>
        <node>/it-autoflight/output/vert</node>
      </chunk>
      <chunk>
        <name>ALT</name>
        <format>%d</format>
        <node>/it-autoflight/input/alt</node>
      </chunk>
      <chunk>
        <name>HDG</name>
        <format>%d</format>
        <node>/it-autoflight/input/hdg</node>
      </chunk>
      <chunk>
        <name>SPD KTS</name>
        <format>%d</format>
        <node>/it-autoflight/input/kts</node>
      </chunk>
      <chunk>
        <name>SPD MACH</name>
        <type>float</type>
        <format>%f</format>
        <node>/it-autoflight/input/mach</node>
      </chunk>
      <chunk>
        <name>VS</name>
        <type>string</type>
        <format>%s</format>
        <node>/it-autoflight/output/vs-fcu-display</node>
      </chunk>
      <chunk>
        <name>FPA</name>
        <type>float</type>
        <format>%f</format>
        <node>/it-autoflight/input/fpa</node>
      </chunk>
    </output>
  </generic>
</PropertyList>
